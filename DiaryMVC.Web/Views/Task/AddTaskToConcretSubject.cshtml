@model DiaryMVC.Application.ViewModels.Task.NewTaskToSubjectVM

@{
    ViewData["Title"] = "AddTaskToConcretSubject";
}

<h1>Add task to subject</h1>

@*<h4>NewTaskToSubjectVM</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTaskToConcretSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="TaskTypeId" class="control-label"></label>*@
                @*<p class="text-justify">1-Sprawozdanie 2-Wejściówka 3-Kolokwium 4-Egzamin 5-projekt</p>*@
                @*<input asp-for="TaskTypeId" class="form-control" />*@
                @*<span asp-validation-for="TaskTypeId" class="text-danger"></span>*@
                @*<input asp-for="TaskTypeId" class="custom-select" />*@
                <a>Task Type</a>
                <select asp-for="TaskTypeId" class="custom-select">
                    <option selected>Open this select menu</option>
                    <option value="1">Sprawozdanie</option>
                    <option value="2">Wejsciówka</option>
                    <option value="3">Kolokwium</option>
                    <option value="4">Egzamin</option>
                    <option value="5">Projekt</option>
                </select>
                <span asp-validation-for="TaskTypeId" class="text-danger"></span>

            </div>
            @*<div class="form-group">
                <label asp-for="UniversitySubjectId" class="control-label"></label>*@
                <input type="hidden" asp-for="UniversitySubjectId" class="form-control" />
                @*<span asp-validation-for="UniversitySubjectId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a>User Deadline</a>
                @*<label asp-for="UserDeadline" class="control-label"></label>*@
                <input asp-for="UserDeadline" class="form-control" />
                <span asp-validation-for="UserDeadline" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDone" /> @Html.DisplayNameFor(model => model.IsDone)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InProgres" /> @Html.DisplayNameFor(model => model.InProgres)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
